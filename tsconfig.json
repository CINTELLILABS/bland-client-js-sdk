{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "typesVersions": {
    "*": {
      "react": ["dist/react/index.d.ts"],
      "webchat": ["dist/webchat.d.ts"]
    }
  },
  "include": ["src"]
}
